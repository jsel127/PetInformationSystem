<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Owner.ExpenseController">
   <children>
      <TabPane prefHeight="720.0" prefWidth="1280.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="Expenses">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <HBox layoutX="401.0" layoutY="-1.0" prefHeight="693.0" prefWidth="879.0">
                           <children>
                              <TableView fx:id="myExpenseTable" prefHeight="693.0" prefWidth="880.0">
                                <columns>
                                  <TableColumn fx:id="myExpenseIDCol" prefWidth="104.0" text="ExpenseID" />
                                  <TableColumn fx:id="myExpenseTypeCol" prefWidth="135.0" text="ExpenseType" />
                                    <TableColumn fx:id="myAmountCol" prefWidth="134.0" text="Amount" />
                                    <TableColumn fx:id="myDateCol" prefWidth="149.0" text="Date" />
                                    <TableColumn fx:id="myNotesCol" prefWidth="356.0" text="Notes" />
                                </columns>
                              </TableView>
                           </children>
                        </HBox>
                        <VBox prefHeight="228.0" prefWidth="402.0" AnchorPane.leftAnchor="0.0">
                           <children>
                              <Label prefHeight="17.0" prefWidth="410.0" text="Add Expense" />
                              <ComboBox fx:id="myExpenseType" prefHeight="25.0" prefWidth="372.0" promptText="ExpenseType" />
                              <TextField fx:id="myAmount" promptText="Amount" />
                              <DatePicker fx:id="myDateOfExpense" prefHeight="25.0" prefWidth="388.0" promptText="Date of Expense" />
                              <TextArea fx:id="myNotes" prefHeight="75.0" prefWidth="372.0" promptText="Notes" />
                              <Button fx:id="myAddExpenseBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="379.0" text="Add Expense">
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </Button>
                              <Label fx:id="myErrorMessage" prefHeight="17.0" prefWidth="381.0" />
                           </children>
                           <padding>
                              <Insets left="15.0" right="15.0" />
                           </padding>
                        </VBox>
                        <Button fx:id="myLoadTableBtn" layoutX="14.0" layoutY="652.0" mnemonicParsing="false" onAction="#loadExpenseData" prefHeight="25.0" prefWidth="374.0" text="Load Table" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>

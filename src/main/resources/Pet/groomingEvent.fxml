<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Pet.GroomingEventController">
    <TabPane prefHeight="720.0" prefWidth="1280.0" tabClosingPolicy="UNAVAILABLE">
        <Tab text="Grooming">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <children>
                        <HBox layoutX="401.0" layoutY="-1.0" prefHeight="693.0" prefWidth="879.0">
                            <children>
                                <TableView fx:id="myGroomingTable" prefHeight="693.0" prefWidth="880.0">
                                    <columns>
                                        <TableColumn fx:id="myEventIDCol" prefWidth="175.0" text="EventID" />
                                        <TableColumn fx:id="myGroomingTypeCol" prefWidth="352.0" text="Grooming Type" />
                                        <TableColumn fx:id="myGroomerIDCol" minWidth="0.0" prefWidth="351.0" text="Groomer ID" />
                                    </columns>
                                </TableView>
                            </children>
                        </HBox>
                        <VBox prefHeight="148.0" prefWidth="402.0" AnchorPane.leftAnchor="0.0">
                            <children>
                                <Label prefHeight="17.0" prefWidth="410.0" text="Add Grooming" />
                                <ComboBox fx:id="myGroomingType" prefHeight="25.0" prefWidth="372.0" promptText="Grooming Type" />
                                <ComboBox fx:id="myGroomerID" layoutX="25.0" layoutY="27.0" prefHeight="25.0" prefWidth="372.0" promptText="GroomerID" />
                                <Button mnemonicParsing="false" onAction="#addGroomingEvent" prefHeight="25.0" prefWidth="379.0" text="Log Grooming">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Button>
                        <Label fx:id="myErrorMessage" prefHeight="30.0" prefWidth="372.0" />
                            </children>
                            <padding>
                                <Insets left="15.0" right="15.0" />
                            </padding>
                        </VBox>
                  <VBox layoutY="609.0" prefHeight="50.0" prefWidth="402.0">
                     <children>
                        <Button fx:id="myLoadTableBtn" mnemonicParsing="false" onAction="#loadGroomingEventData" prefHeight="25.0" prefWidth="374.0" text="Load Table">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Button>
                        <Button fx:id="myReturnEventPageBtn" mnemonicParsing="false" onAction="#returnToEventPage" prefHeight="25.0" prefWidth="374.0" text="Return Event Page">
                           <VBox.margin>
                              <Insets bottom="10.0" top="15.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                     <padding>
                        <Insets left="15.0" right="15.0" />
                     </padding>
                  </VBox>
                  <VBox layoutY="163.0" prefHeight="176.0" prefWidth="401.0">
                     <children>
                        <Label text="Analytical Query" />
                        <HBox>
                           <children>
                              <Label prefHeight="17.0" prefWidth="373.0" text="Find the groomer which has the highest average rating in" />
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <ComboBox fx:id="myCityAQ" prefHeight="18.0" prefWidth="82.0" promptText="City" />
                              <Label prefHeight="17.0" prefWidth="60.0" text="  with over " />
                              <TextField fx:id="myMinNumberRatings" prefHeight="25.0" prefWidth="100.0" promptText="# ratings" />
                              <Label text="  ratings" />
                           </children>
                        </HBox>
                        <Button mnemonicParsing="false" onAction="#runGroomerAnalyticalQuery" prefHeight="25.0" prefWidth="388.0" text="Query" />
                        <Label fx:id="myGroomerQueryResult" prefHeight="89.0" prefWidth="371.0" />
                     </children>
                     <padding>
                        <Insets left="15.0" right="15.0" />
                     </padding>
                  </VBox>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
    </TabPane>
</AnchorPane>

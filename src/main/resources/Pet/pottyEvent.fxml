<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Pet.PottyEventController">
    <TabPane prefHeight="720.0" prefWidth="1280.0" tabClosingPolicy="UNAVAILABLE">
        <Tab text="Potty">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <children>
                        <HBox layoutX="401.0" layoutY="-1.0" prefHeight="693.0" prefWidth="879.0">
                            <children>
                                <TableView fx:id="myPottyTable" prefHeight="693.0" prefWidth="880.0">
                                    <columns>
                                        <TableColumn fx:id="myEventIDCol" prefWidth="175.0" text="EventID" />
                                        <TableColumn fx:id="myPottyTypeCol" prefWidth="197.0" text="Potty Type" />
                                        <TableColumn fx:id="myNotesCol" minWidth="0.0" prefWidth="506.0" text="Notes" />
                                    </columns>
                                </TableView>
                            </children>
                        </HBox>
                        <VBox prefHeight="426.0" prefWidth="402.0" AnchorPane.leftAnchor="0.0">
                            <children>
                                <Label prefHeight="17.0" prefWidth="410.0" text="Add Potty" />
                                <ComboBox fx:id="myPottyType" prefHeight="25.0" prefWidth="372.0" promptText="Potty Type" />
                                <TextArea fx:id="myNotes" prefHeight="75.0" prefWidth="372.0" promptText="Summary" />
                                <Button mnemonicParsing="false" onAction="#addPotty" prefHeight="25.0" prefWidth="379.0" text="Log Potty">
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </Button>
                        <Label fx:id="myErrorMessage" prefHeight="18.0" prefWidth="373.0" />
                            </children>
                            <padding>
                                <Insets left="15.0" right="15.0" />
                            </padding>
                        </VBox>
                  <VBox layoutY="610.0" prefHeight="50.0" prefWidth="402.0">
                     <children>
                        <Button fx:id="myLoadTableBtn" mnemonicParsing="false" onAction="#loadPottyEventData" prefHeight="25.0" prefWidth="374.0" text="Load Table">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Button>
                        <Button fx:id="myReturnEventPageBtn" mnemonicParsing="false" onAction="#returnToEventPage" prefHeight="25.0" prefWidth="374.0" text="Return Event Page">
                           <VBox.margin>
                              <Insets bottom="10.0" top="15.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                     <padding>
                        <Insets left="15.0" right="15.0" />
                     </padding>
                  </VBox>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
    </TabPane>
</AnchorPane>
